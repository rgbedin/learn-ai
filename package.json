{
  "private": true,
  "workspaces": [
    "apps/*",
    "packages/*",
    "services/*"
  ],
  "prisma": {
    "schema": "packages/database/prisma/schema.prisma"
  },
  "scripts": {
    "build": "turbo run build",
    "db:push": "turbo run db:push",
    "dev": "turbo run dev",
    "format": "prettier --write \"**/*.{ts,tsx,md}\"",
    "generate": "turbo run generate",
    "lint": "turbo run lint"
  },
  "devDependencies": {
    "prettier": "^3.0.3",
    "tsx": "^3.12.10",
    "turbo": "^1.10.14"
  },
  "packageManager": "yarn@1.22.17"
}
